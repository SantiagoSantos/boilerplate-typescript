{
  "compilerOptions": {    
    "outDir": "./dist",
    "baseUrl": "./",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2022",
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules","dist"]
}
